{
  "name": "adplus",
  "private": true,
  "scripts": {
    "dev": "concurrently -n FRONT,BACK -c blue,green \"npm --prefix frontend run dev\" \"npm --prefix backend run dev\"",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix backend run start",
    "postinstall": "concurrently \"npm --prefix frontend install\" \"npm --prefix backend install\""
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12"
  },
  "engines": { "node": ">=18" }
}
